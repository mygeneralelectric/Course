<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/course_list_item"
    android:layout_width="match_parent" android:layout_height="96dp"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/course_number"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_alignParentLeft="true"
        android:background="@color/colorAccent"
        android:text="1"
        android:textSize="56sp"
        android:textColor="#ffffff"
        android:gravity="center"/>

    <RelativeLayout
        android:id="@+id/course_msg"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_toRightOf="@id/course_number">

        <TextView
            android:id="@+id/course_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:text="马兰芳教学楼101"
            android:textColor="#ffffff"
            android:textSize="20dp"/>

        <ImageView
            android:id="@+id/course_line"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:src="@drawable/line_white"
            android:layout_below="@id/course_place"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layerType="software"/>

        <TextView
            android:id="@+id/course_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/course_line"
            android:layout_marginLeft="16dp"
            android:text="IT项目管理"
            android:textSize="20sp"
            android:textColor="#ffffff"/>

    </RelativeLayout>

</RelativeLayout>