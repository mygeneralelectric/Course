<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    tools:context="com.quantum.app.course.LoginFragment">

    <ImageView
        android:id="@+id/user_profile"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:src="@drawable/user_profile"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/code_img"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/code_img"
        android:layout_below="@id/user_profile"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="50dp"/>

    <EditText
        android:id="@+id/code_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_profile"
        android:layout_toRightOf="@id/code_img"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="50dp"
        android:hint="@string/code_hint"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:textSize="20sp"
        android:background="@android:color/transparent"/>

    <ImageView
        android:id="@+id/code_line"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:src="@drawable/line_white"
        android:layout_below="@id/code_img"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layerType="software"/>

    <ImageView
        android:id="@+id/passwd_img"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/passwd_img"
        android:layout_below="@id/code_line"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="50dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/code_line"
        android:layout_toRightOf="@id/passwd_img"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="50dp"
        android:hint="@string/passwd_hint"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:textSize="20sp"
        android:background="@android:color/transparent" />

    <ImageView
        android:id="@+id/passwd_line"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:src="@drawable/line_white"
        android:layout_below="@id/passwd_img"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layerType="software"/>

    <Button
        android:id="@+id/login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/passwd_line"
        android:layout_marginTop="16dp"
        android:text="@string/login_btn"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:background="@color/colorAccent"
        android:padding="16dp"/>

</RelativeLayout>
